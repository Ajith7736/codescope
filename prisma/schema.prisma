generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String         @id
  name          String
  email         String
  emailVerified Boolean        @default(false)
  image         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]
  projects      Project[]
  subscription  Subscription[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Subscription {
  id                       String             @id @default(uuid())
  userId                   String
  planId                   String             @db.VarChar(50)
  razorpay_subscription_id String?            @db.VarChar(100)
  status                   SubscriptionStatus @default(PENDING)
  quantity                 Int
  total_count              Int?
  paid_count               Int
  remaining_count          Int
  current_start            DateTime?
  current_end              DateTime?
  charge_at                DateTime?
  activated_at             DateTime?
  cancelled_at             DateTime?
  halted_at                DateTime?
  paused_at                DateTime?
  resumed_at               DateTime?
  completed_at             DateTime?
  last_payment_at          DateTime?
  payments                 Payment[]
  createdAt                DateTime           @default(now())
  updatedAt                DateTime           @updatedAt
  user                     User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan                     Plan               @relation(fields: [planId], references: [id])
  invoices                 Invoice[]

  @@unique([razorpay_subscription_id])
  @@map("subscriptions")
}

model Payment {
  id                       String        @id @default(uuid())
  razorpay_payment_id      String        @unique
  razorpay_subscription_id String?
  subscription             Subscription? @relation(fields: [razorpay_subscription_id], references: [razorpay_subscription_id])
  amount                   Float
  currency                 String        @default("INR")
  status                   PaymentStatus
  method                   String?
  email                    String?
  contact                  String?
  error_code               String?
  error_desc               String?
  captured_at              DateTime?
  createdAt                DateTime      @default(now())

  @@map("payment")
}

model Invoice {
  id                       String    @id @default(cuid())
  razorpay_subscription_id String
  razorpay_invoice_id      String    @unique
  razorpay_payment_id      String?
  amount                   Int
  currency                 String
  status                   String
  billingStart             DateTime?
  billingEnd               DateTime?
  paidAt                   DateTime?
  createdAt                DateTime  @default(now())

  subscription Subscription @relation(fields: [razorpay_subscription_id], references: [id])

  @@map("invoice")
}

enum SubscriptionStatus {
  PENDING
  ACTIVE
  AUTHENTICATED
  HALTED
  CANCELLED
  EXPIRED
  FAILED
}

enum PaymentStatus {
  CAPTURED
  FAILED
  AUTHORIZED
  PAID
}

model Plan {
  id             String         @id @default(uuid())
  name           String         @unique
  description    String
  price          Int
  currency       String         @default("INR")
  isFree         Boolean        @default(false)
  razorpayPlanId String?        @unique
  features       Json
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  subscriptions  Subscription[]
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Project {
  id          String     @id @default(uuid())
  projectname String
  projectcode String
  projecttree String
  ownername   String
  mostused    String
  lastcommit  String
  commitid    String?    @unique
  totalfiles  Int
  branch      String?
  analysis    Analysis[]
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime   @default(now())
  overview    Overview?
}

model Overview {
  id              String   @id @default(uuid())
  projectId       String   @unique
  summary         String
  keyFeatures     Json
  useCases        Json
  techStack       String[]
  architecture    Json
  howItWorks      Json
  gettingStarted  Json
  notableFeatures Json
  project         Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Analysis {
  id              String   @id @default(uuid())
  type            String
  totalissues     Int?
  status          String   @default("pending")
  issues          Issues[]
  summary         String?
  projectId       String
  analysis_output Json?
  score           Int?
  project         Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt
}

model Issues {
  id                     String   @id @default(uuid())
  severity               String
  issuetitle             String
  issuedesc              String
  issuelocation          String
  suggesstedfix          String
  suggesstedcodelanguage String?
  suggesstedcode         String?
  analysisId             String
  analysis               Analysis @relation(fields: [analysisId], references: [id], onDelete: Cascade)
  createdAt              DateTime @default(now())
}
