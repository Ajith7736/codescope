generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                    String              @id
  name                  String
  email                 String              @unique
  emailVerified         Boolean             @default(false)
  image                 String?
  createdAt             DateTime            @default(now())
  updatedAt             DateTime            @default(now()) @updatedAt
  razorpay_customer_id  String?             @unique
  subscription_status   SubscriptionStatus?
  subscription_end_date DateTime?
  projects              Project[]
  accounts              Account[]
  sessions              Session[]
  subscription          Subscription[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Subscription {
  id                       String             @id @default(uuid())
  userId                   String
  planId                   String             @db.VarChar(50)
  status                   SubscriptionStatus @default(pending)
  createdAt                DateTime           @default(now())
  updatedAt                DateTime           @updatedAt
  activated_at             DateTime?
  cancelled_at             DateTime?
  charge_at                DateTime?
  completed_at             DateTime?
  current_end              DateTime?
  current_start            DateTime?
  halted_at                DateTime?
  last_payment_at          DateTime?
  paid_count               Int
  paused_at                DateTime?
  quantity                 Int
  razorpay_subscription_id String?            @unique @db.VarChar(100)
  remaining_count          Int
  resumed_at               DateTime?
  total_count              Int?
  plan                     Plan               @relation(fields: [planId], references: [razorpayPlanId])
  user                     User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([razorpay_subscription_id])
  @@map("subscriptions")
}

model Payment {
  id                       String        @id @default(uuid())
  razorpay_payment_id      String        @unique
  razorpay_subscription_id String?
  amount                   Float
  currency                 String        @default("INR")
  status                   PaymentStatus
  method                   String?
  email                    String?
  contact                  String?
  error_code               String?
  error_desc               String?
  captured_at              DateTime?
  createdAt                DateTime      @default(now())

  @@index([razorpay_subscription_id])
  @@index([razorpay_payment_id])
  @@map("payment")
}

model Invoice {
  id                       String    @id @default(cuid())
  razorpay_invoice_id      String    @unique
  razorpay_payment_id      String?
  amount                   Int
  currency                 String
  status                   String
  billingStart             DateTime?
  billingEnd               DateTime?
  paidAt                   DateTime?
  createdAt                DateTime  @default(now())
  razorpay_subscription_id String?

  @@index([razorpay_subscription_id])
  @@index([razorpay_payment_id])
  @@map("invoice")
}

model Plan {
  id             String         @id @default(uuid())
  name           String         @unique
  description    String
  price          Int
  currency       String         @default("INR")
  isFree         Boolean        @default(false)
  razorpayPlanId String?        @unique
  features       Json
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  subscriptions  Subscription[]
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Project {
  id          String     @id @default(uuid())
  projectname String
  userId      String
  createdAt   DateTime   @default(now())
  projectcode String
  ownername   String
  mostused    String
  totalfiles  Int
  lastcommit  String
  projecttree String
  branch      String?
  commitid    String?    @unique
  analysis    Analysis[]
  overview    Overview?
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Overview {
  id              String   @id @default(uuid())
  projectId       String   @unique
  summary         String
  techStack       String[]
  keyFeatures     Json
  useCases        Json
  architecture    Json
  howItWorks      Json
  gettingStarted  Json
  notableFeatures Json
  project         Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Analysis {
  id              String   @id @default(uuid())
  type            String
  status          String   @default("pending")
  summary         String?
  projectId       String
  createdAt       DateTime @default(now())
  totalissues     Int?
  updatedAt       DateTime @default(now()) @updatedAt
  score           Int?
  analysis_output Json?
  project         Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  issues          Issues[]
}

model Issues {
  id                     String   @id @default(uuid())
  severity               String
  issuetitle             String
  issuedesc              String
  issuelocation          String
  suggesstedfix          String
  analysisId             String
  createdAt              DateTime @default(now())
  suggesstedcode         String?
  suggesstedcodelanguage String?
  analysis               Analysis @relation(fields: [analysisId], references: [id], onDelete: Cascade)
}

enum SubscriptionStatus {
  pending
  active
  cancelled
  expired
  failed
  authenticated
  paused
  halted
  completed
}

enum PaymentStatus {
  captured
  failed
  authorized
  refunded
  created
}
